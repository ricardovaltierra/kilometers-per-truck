<% provide :page, "All Citys" %>

<header class="trust-blue-gradient">
  <div class="hd-container">
    <div class="hd-back">
      <%= link_to user_path(current_user), title: "back" do %>      
        <i class="fas fa-arrow-left fa-xs"></i>
      <% end %>
    </div>     
    <div class="hd-title"><h1>Citys</h1></div>
    <div class="hd-button"><i class="fas fa-search fa-2x"></i></div>
  </div>
</header>
